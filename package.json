{
  "name": "igluski-playwright-ts",
  "version": "1.0.0",
  "description": "End-to-end QA project including automated tests for search and booking flows on IgluSki's demo holiday website using Playwright + TypeScript.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:allure": "npx playwright test && npm run allure:generate && npm run allure:open",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:single": "npx allure generate allure-results --single-file --clean -o allure-single-file",
    "install:browsers": "playwright install"
  },
  "keywords": [
    "playwright",
    "typescript",
    "e2e",
    "QA",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^2.15.1",
    "playwright": "^1.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "playwright-core": "^1.57.0",
    "undici-types": "^7.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielsouza80/igluski-playwright-ts.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/gabrielsouza80/igluski-playwright-ts/issues"
  },
  "homepage": "https://github.com/gabrielsouza80/igluski-playwright-ts#readme"
}
